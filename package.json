{
  "name": "my_next_vacation",
  "version": "1.0.0",
  "description": "This project is all about finding my next half board, cheap, family oriented, Israeli vacation.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "tsx watch src/backend/server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "start": "node dist/backend/server.js",
    "scraper": "tsx src/node/scraper/hotelScraper.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "playwright": "playwright test",
    "playwright-ui": "playwright test --ui"
  },
  "repository": {
    "type": "git",
    "url": "myNextVacay"
  },
  "keywords": [
    "vacation",
    "half",
    "board",
    "family"
  ],
  "author": "Meni Grossman",
  "license": "ISC",
  "imports": {
    "#index.css": "./src/frontend/index.css"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.15",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "lucide-react": "^0.546.0",
    "luxon": "^3.7.1",
    "morgan": "^1.10.1",
    "node-telegram-bot-api": "^0.66.0",
    "playwright": "^1.55.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/luxon": "^3.7.1",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "express-rate-limit": "^8.1.0",
    "postcss": "^8.4.32",
    "postcss-nesting": "^12.1.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  }
}
